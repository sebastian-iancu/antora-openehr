{
  "name": "antora-openehr-builder",
  "version": "1.0.0",
  "description": "Build system for openEHR specifications using Antora",
  "private": true,
  "scripts": {
    "build": "antora antora-playbook.yml",
    "build-local": "antora antora-playbook-local.yml",
    "build-github": "antora antora-playbook-github.yml",
    "serve": "npx http-server build -p 8080 -c-1",
    "clean": "rm -rf build/* .cache/*"
  },
  "keywords": [
    "openehr",
    "antora",
    "documentation",
    "specifications"
  ],
  "author": "openEHR Foundation",
  "license": "CC-BY-ND-3.0",
  "dependencies": {
    "@antora/cli": "3.1",
    "@antora/lunr-extension": "^1.0.0-alpha.12",
    "@antora/site-generator": "3.1",
    "@asciidoctor/tabs": "^1.0.0-beta.6",
    "asciidoctor": "^3.0.4",
    "asciidoctor-kroki": "^0.18.1",
    "http-server": "^14.1.1",
    "js-yaml": "^4.1.1",
    "medium-zoom": "^1.1.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
