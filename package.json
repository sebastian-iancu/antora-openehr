{
  "name": "openehr-antora-build",
  "version": "1.0.0",
  "description": "Build system for openEHR specifications using Antora",
  "private": true,
  "scripts": {
    "build": "antora antora-playbook.yml",
    "build-local": "antora antora-playbook-local.yml",
    "serve": "npx http-server build/site -p 8080 -c-1",
    "clean": "rm -rf build .cache"
  },
  "keywords": [
    "openehr",
    "antora",
    "documentation",
    "specifications"
  ],
  "author": "openEHR Foundation",
  "license": "CC-BY-ND-3.0",
  "devDependencies": {
    "@antora/cli": "^3.1.7",
    "@antora/site-generator": "^3.1.7",
    "@antora/lunr-extension": "^1.0.0-alpha.8",
    "http-server": "^14.1.1"
  },
  "dependencies": {
    "asciidoctor": "^3.0.4",
    "asciidoctor-kroki": "^0.18.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
